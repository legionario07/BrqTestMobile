<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Style de Titles.-->
    <style name="appTitles">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!--Style de itemListView-->
    <style name="appItemListView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">#000000</item>

    </style>

    <!--Style de itemDetailClient-->
    <style name="appItemDetailClient">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>

    </style>

    <!--Style de itemDetailClient-->
    <style name="appItemDetailClientEdit">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>

    </style>

    <!--Style de itemDetailClient-->
    <style name="appItemDetailClientLand">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="appItemDetailClientLandEdit">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">#000000</item>

    </style>

</resources>
